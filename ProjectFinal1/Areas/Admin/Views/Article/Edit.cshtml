@model ProjectFinal1.Models.ARTICLE

@{
    ViewBag.Title = "Editrticle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m=>m.ID_AR)

    <div class="row m-2">
        <div class="col-md-12">
            <div class="content">
                <div class="section-block" id="basicform">
                    <h3 class="section-title">Update Post</h3>
                </div>
                <div class="card">
                    <div class="row">
                        <div class=" col-md-8">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group m-2">
                                @Html.LabelFor(model => model.ID_AR, "ID", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.ID_AR, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ID_AR, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <form class="m-2">
                                <div class="form-group m-2">
                                    @Html.LabelFor(model => model.NAME_AR, "Title", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.NAME_AR, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NAME_AR, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group m-2">
                                    @Html.LabelFor(model => model.ND, "Content", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-12">
                                        <textarea class="form-control" name="ND" id="inputND">@Model.ND</textarea>
                                        @Html.ValidationMessageFor(model => model.ND, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </form>

                            <div class="row m-1">
                                <div class="form-group col-md-4">
                                    @Html.LabelFor(model => model.DATE_SUB, "Date", htmlAttributes: new { @class = "col-form-label" })
                                    <div class="col-md-14">
                                        @Html.EditorFor(model => model.DATE_SUB, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                        @Html.ValidationMessageFor(model => model.DATE_SUB, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    @Html.LabelFor(model => model.ACCOUNT, "Author", htmlAttributes: new { @class = "col-form-label" })
                                    <div class="col-md-14">
                                        <select name="ACCOUNT" class="form-control">
                                            @foreach (var item in new ProjectFinal1.Models.MEN_FASHIONSEntities().ACCOUNTs.ToList())
                                            {
                                                <option value="@item.ACCOUNT1">@item.NAME_ACCOUNT</option>
                                            }
                                        </select>
                                        @Html.ValidationMessageFor(model => model.ACCOUNT, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    @Html.LabelFor(model => model.DADUYET, "Approved", htmlAttributes: new { @class = "col-form-label" })
                                    <div class="col-md-14">
                                        <div class="checkbox">
                                            <input type="checkbox" value="true" name="DADUYET" />
                                            @Html.ValidationMessageFor(model => model.DADUYET, "", new { @class = "text-danger" })


                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="email action-send">
                                <div class="col-md-12 ">
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" class="icon s7-mail" />
                                        <button class="btn btn-secondary btn-space" type="button"><i class="icon s7-close"></i> Reset</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class=" col-md-4">
                            <form class="m-2">
                                <h3>Upload Images</h3>
                                <img class="img-fluid" src="~/img/home/hero-slide1.png" />
                                <div class="input-group">
                                    <div class="custom-file mb-3">

                                        @Html.LabelFor(model => model.IMG, "Choose files", htmlAttributes: new { @class = "custom-file-label", @for = "customFile" })
                                        <div class="col-md-14">
                                            @Html.EditorFor(model => model.IMG, new { htmlAttributes = new { @class = "custom-file-input form-control", type = "file" } })
                                            @Html.ValidationMessageFor(model => model.IMG, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section ScriptJS {
    <script>
        CKEDITOR.replace('inputND', {

            fullPage: false,
            allowedContent: true
        })
    </script>
}


